@model WMB.Data.DataContext.ProductTypeCollection

@{
    ViewBag.Title = "Edit";
}

<link href="~/css/jquery.datetimepicker.css" rel="stylesheet" />
<script src="~/lib/jquery/dist/jquery.js" type="text/javascript"></script>
<script src="~/lib/datetimepicker/jquery.datetimepicker.js" type="text/javascript"></script>

<html>
<head>
    <title>Редагування</title>
</head>
<body>
    <div class="header">
        <div class="header_slide">
            <div class="header_bottom_left">
                @*@await Html.PartialAsync("_Categories", "MyApiary")*@
                <div class="categories">
                    <h3>Категорії</h3>
                    <ul>
                        <li><a asp-action="Index" asp-controller="BeeHive">Vyluck</a></li>
                        <li><a asp-action="Index" asp-controller="Statistics">Statistick</a></li>
                        <li><a asp-action="Index" asp-controller="Collection">Zbir producty</a></li>
                        <li><a asp-action="Index" asp-controller="Calendar">Calendar</a></li>
                        <li><a href="#">Laptop</a></li>
                        <li><a href="#">Accessories</a></li>
                        <li><a href="#">Software</a></li>
                        <li><a href="#">Sports &amp; Fitness</a></li>
                    </ul>
                </div>
            </div>
            <div class="header_bottom_right">
                <div class="content_top">
                    <div class="back-links">
                        <p><a asp-action="Index" asp-controller="MyApiary">Моя пасіка</a>  >>>> <a asp-action="Index" asp-controller="Collection">Збір продукту</a>  >>>> <a asp-action="Edit" asp-controller="Collection">@Model.Name</a></p>
                    </div>
                    <div class="clear"></div>
                </div>
                <form asp-action="Edit">
                    <div class="form-horizontal">
                        <hr />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group">
                            <label asp-for="Name" class="col-md-2 control-label"></label>
                            <div class="col-md-10">
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Weight" class="col-md-2 control-label"></label>
                            <div class="col-md-10">
                                <input asp-for="Weight" class="form-control" />
                                <span asp-validation-for="Weight" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="zDataZbory" class="col-md-2 control-label"></label>
                            <div class="col-md-10">
                                <input asp-for="zDataZbory" class="form-control" />
                                <span asp-validation-for="zDataZbory" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Save" class="btn btn-default" />
                                <a asp-action="Index" class="btn btn-default">Back to List</a>
                            </div>
                        </div>
                    </div>
                </form>

            </div>
            <div class="clear"></div>
        </div>
    </div>
</body>
</html>


<script type="text/javascript">

    var todaysdate = new Date();
    jQuery('#zDataZbory').datetimepicker({
        dayOfWeekStart: 1,
        lang: 'en'
    });
   
    //jQuery('#zData1').datetimepicker({ value: todaysdate.getDate().toString(), step: 10 });

</script>